<!doctype html>

<html lang="en" ng-app="calApp">
<head>
  <meta charset="utf-8">
  <title>Y U NO BIG?</title>
  <link rel="stylesheet" href="lib/bootstrap/bootstrap.min.css"/>
  <link rel="stylesheet" href="css/app.css"/>
</head>

<body ng-controller='FoodCtrl'>

  <a href="#" id="browserid" title="Sign-in with BrowserID" ng-click='signIn()' ng-hide='hideSignup'>  
    <img src="/images/sign_in_blue.png" alt="Sign in">  
  </a>

  <div class='total hero-unit'>
    <table border="0" >
      <tr>
        <td>calories</td>
        <td>{{calories}}</td>
      </tr>
      <tr>
        <td>protein</td>
        <td>{{protein}}</td>
      </tr>
      <tr>
        <td>carbs</td>
        <td>{{carbs}}</td>
      </tr>
      <tr>
        <td>fat</td>
        <td>{{fat}}</td>
      </tr>
    </table>
  </div>


  <div class='eaten hero-unit' ng-show="foodEaten">
    <table border="0">
      <tr ng-repeat="item in eaten">
        <td>{{item.qty}}</td>
        <td>{{item.name}}</td>
      </tr>
    </table>
  </div>


  <div class='clearfix'></div>
  <div> 

  <div>
    <button ng-repeat='item in items' class='btn btn-success' type='button' ng-click='addItem(item)'>
      {{item.name}}
    </button>
  </div>

  <button ng-click='addFood()' ng-show='addButton' class='btn' type='button'>+ Add</button>

  <form class="well form-inline" ng-show="showAdd">
    <input type="text" class="" placeholder="Name">
    <input type="text" class="input-small" placeholder="Calories">
    <input type="text" class="input-small" placeholder="Protein">
    <input type="text" class="input-small" placeholder="Carbs">
    <input type="text" class="input-small" placeholder="Fat">

    <button type="button" class="btn" ng-click="addFoodToDB()">Add</button>
    <button type="button" class="btn" ng-click="cancelAdd()">Cancel</button>
  </form>

  <script src="https://browserid.org/include.js" type="text/javascript"></script>  
  <script src="lib/angular/angular-1.0.1.min.js"></script>
  <script src="lib/angular/angular-cookies-1.0.1.min.js"></script>
  <script src="js/app.js"></script>
  <script src="js/services.js"></script>
  <script src="js/controllers.js"></script>
  <script src="js/filters.js"></script>
  <script src="js/directives.js"></script>
</body>
</html>

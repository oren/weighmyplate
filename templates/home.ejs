<!doctype html>

<html lang="en" ng-app="calApp">
<head>
  <meta charset="utf-8">
  <title>Y U NO BIG?</title>
  <link rel="stylesheet" href="lib/bootstrap/bootstrap.min.css"/>
  <link rel="stylesheet" href="css/app.css"/>
</head>

<body ng-controller='FoodCtrl'>

  <div class='total hero-unit'>
    <table border="0" >
      <tr>
        <td>calories</td>
        <td>{{calories}}</td>
      </tr>
      <tr>
        <td>protein</td>
        <td>{{protein}}</td>
      </tr>
      <tr>
        <td>carbs</td>
        <td>{{carbs}}</td>
      </tr>
      <tr>
        <td>fat</td>
        <td>{{fat}}</td>
      </tr>
    </table>
  </div>


  <div class='eaten hero-unit' ng-show="foodEaten">
    <table border="0">
      <tr ng-repeat="item in eaten">
        <td>{{item.qty}}</td>
        <td>{{item.name}}</td>
      </tr>
    </table>
  </div>


  <div class='clearfix'></div>
  <div> 

  <div>
    <button ng-repeat='item in items' class='btn btn-success' type='button' ng-click='addItem(item)'>
      {{item.name}}
    </button>
  </div>

  <button ng-click='addFood()' ng-show='showAdd' class='btn' type='button'>+ Add</button>
  <div class='add-food' ng-bind-html-unsafe="foodHtml"></div>

  <script src="lib/angular/angular-1.0.0.min.js"></script>
  <script src="lib/ejs_production.js"></script>
  <script src="js/app.js"></script>
  <script src="js/services.js"></script>
  <script src="js/controllers.js"></script>
  <script src="js/filters.js"></script>
  <script src="js/directives.js"></script>
</body>
</html>
